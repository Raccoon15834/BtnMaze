<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGreen">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnO5"
        android:layout_width="@dimen/largeLen"
        android:layout_height="@dimen/smallLen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:text="@string/orange_layout"
        android:textSize="@dimen/lilText"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnO5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/lightGreen">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/longQuote"
                android:textSize="@dimen/lilText"
                android:padding="@dimen/marginLen"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/greenLayout"
                    android:textSize="@dimen/bigText"
                    android:background="@color/greyGreen"
                    android:textColor="@color/white"
                    android:padding="@dimen/marginLen"
                    android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/longQuote"
                android:textSize="@dimen/lilText"
                android:padding="@dimen/marginLen"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/longQuote"
                android:textSize="@dimen/lilText"
                android:padding="@dimen/marginLen"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/longQuote"
                android:textSize="@dimen/lilText"
                android:padding="@dimen/marginLen"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/longQuote"
                android:textSize="@dimen/lilText"
                android:padding="@dimen/marginLen"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/longQuote"
                android:textSize="@dimen/lilText"
                android:padding="@dimen/marginLen"/>
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>